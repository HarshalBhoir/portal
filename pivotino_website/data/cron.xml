<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ir_cron_get_instance_state" model="ir.cron">
            <field name="name">Pivotino: Get Instance State</field>
            <field name="model_id" ref="model_instance_details"/>
            <field name="state">code</field>
            <field name="code">model._cron_get_instance_state()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
    <data>
        <record id="ir_cron_create_instance" model="ir.cron">
            <field name="name">Pivotino: Create Instance</field>
            <field name="model_id" ref="model_create_instance_wizard"/>
            <field name="state">code</field>
            <field name="code">model._cron_create_instance()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
